<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <style>
    a,
    a:active {
      color: #333;
    }

    .completed a {
      color: #d9d9d9;
    }
  </style>
  <link rel="stylesheet" href="https://rawgit.com/tastejs/todomvc-app-css/master/index.css">
  <title>Document</title>
</head>

<body>
  <section class="todoapp">
    <header class="header">
      <h1>Koa Todo</h1>
      <form action="">
        <input class="new-todo" name="content" placeholder="Koa Todo List" autofocus>
      </form>
    </header>
    <section class="main">
      <input id="toggle-all" class="toggle-all" type="checkbox">
      <label for="toggle-all">Mark all as complete</label>
      <ul class="todo-list">
        {{#each todos as |todo|}}
        <li class="todo-item {{#if todo.done}} completed {{/if}}" data-id={{todo.id}}>
          <div class="view">
            <input class="toggle" type="checkbox" {{#if todo.done}} checked {{/if}}>
            <label><a href="http://localhost:5000/{{todo.id}}">{{todo.content}}</a></label>
            <button class="destroy "></button>
          </div>
          <input class="edit " value="Create a TodoMVC template ">
        </li>
        {{/each}}
      </ul>
    </section>
  </section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js "></script>
  <script>
    const $form = $('form');
    const $input = $('.new-todo');
    const $deleteBtn = $('.todo-item .destroy');
    const $checkBox = $('.toggle');
    const ROOT = 'http://localhost:5000/'

    function createTodo(e) {
      e.preventDefault();
      $.post(`${ROOT}?content=${$input.val()}`, function (todos) {
        location.reload();
      })
    }

    function deleteTodo() {
      const $this = $(this);
      const todoItem = $this.parents('.todo-item');
      const id = todoItem.attr('data-id');
      $.ajax({
        url: `${ROOT}?id=${id}`,
        method: 'delete',
        success: function () {
          todoItem.empty();
        }
      })
    }

    function toggleDone() {
      const $this = $(this);
      const todoItem = $this.parents('.todo-item');
      const id = todoItem.attr('data-id');
      const checked = $this.prop('checked');
      $.ajax({
        url: `${ROOT}?id=${id}&done=${checked}`,
        method: 'put',
        success: function (todo) {
          if (todo.done) {
            todoItem.addClass('completed');
          } else {
            todoItem.removeClass('completed');
          }
          $this.attr('checked', todo.done);
        }
      })
    }

    $form.on('submit', createTodo);
    $deleteBtn.on('click', deleteTodo);
    $checkBox.on('click', toggleDone);
  </script>
</body>

</html>